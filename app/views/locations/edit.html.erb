<h2>Edit Location</h2>
<%= form_for @location do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
  </div>

  <div class="form-group">
    <%= f.label :street %>
    <%= f.text_field :street %><br>
  </div>

  <div class="form-group">
    <%= f.label :suite %>
    <%= f.text_field :suite %><br>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city %><br>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state %><br>
  </div>

  <div class="form-group">
    <%= f.label :zip %>
    <%= f.text_field :zip %><br>
  </div>

  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone %><br>
  </div>

  <div class="form-group">
    <%= f.label :contact %>
    <%= f.text_field :contact %><br>
  </div>

  <%= f.submit "Submit", class:'btn btn-primary' %>
  <%= link_to "Cancel", locations_path, class:"btn btn-default" %>

<% end %>