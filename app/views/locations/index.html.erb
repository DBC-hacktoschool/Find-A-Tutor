<h1>ALL THE LOCATIONS ARE HERE MUHHHHH</h1>

<br>
<%= link_to "New Location", new_location_path, class:"btn btn-primary"  %>
<br>

<% @locations.each do |location| %>
  <h2><%= link_to location.name, location_path(location)%></h2>
  <%= link_to 'Edit', edit_location_path(location.id), class:"btn btn-primary"  %> | <%= link_to 'Delete', location_path(location.id), class:"btn btn-primary", method: :delete, data: {confirm: 'Are you sure?'} %><br>
<% end %>
