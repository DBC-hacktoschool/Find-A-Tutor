<table>
  <tr>
    <th>Student Needs Postings</th>
    <th>The needs in your area:</th>
    <th colspan="2"></th>
  </tr>
 
  <% @needs.each do |need| %>
    <tr>
      <td><%= need.title %></td>
      <td><%= need.description %></td>
      <td><%= link_to 'Show', need_path(need) %></td>
      <td><%= link_to 'Edit', edit_need_path(need) %></td>
      <td><%= link_to 'Destroy', need_path(need),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>