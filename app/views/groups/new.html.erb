<h2>Add New Group</h2>
<%= form_for @group do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %><br>
  </div>

  <%= f.submit "Submit", class:'btn btn-primary' %>
  <%= link_to "Cancel", groups_path, class:"btn btn-default" %>

<% end %>