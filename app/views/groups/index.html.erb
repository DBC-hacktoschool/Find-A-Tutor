<h1>ALL THE GROUPS ARE HERE MUHHHHH</h1>

<br>
<%= link_to "New Group", new_group_path, class:"btn btn-primary"  %>
<br>

<% @groups.each do |group| %>
  <h2><%= link_to group.name, group_path(group)%></h2>
  <h5><%= group.description %></h5>
  <%= link_to 'Edit', edit_group_path(group.id), class:"btn btn-primary"  %> | <%= link_to 'Delete', group_path(group.id), class:"btn btn-primary", method: :delete, data: {confirm: 'Are you sure?'} %><br>
<% end %>
