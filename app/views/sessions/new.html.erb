<% @page_title = 'After-school Tutoring Sign In' %>
<%= render partial: 'layouts/header', locals: {page_title: @page_title} %>
<br>
<div id="wrapper">


  <%= form_for @user, :url => { :action => "create" } do |f| %>
  <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>

  <div class="alert-error"><%= msg %></div>
  <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: 'Becky' %><br>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'Password' %><br>
  </div>
  <br>
  <%= f.submit "Sign In", class:'btn btn-primary' %>

  <%= link_to "Cancel", users_path, class:"btn btn-default" %>
  <% end %>
